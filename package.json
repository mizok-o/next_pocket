{
  "name": "ato",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Ato（あと）- あとで読みたい、すべてを記録する Next.js + Supabase + Chrome拡張機能のブックマーク管理アプリ",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:extension": "node chrome-extension/build.js dev --watch",
    "dev:redis": "docker-compose up -d redis && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:extension\" --names \"WEB,EXT\" --prefix-colors \"blue,yellow\"",
    "dev:full": "docker-compose up -d redis && concurrently \"npm run dev\" \"npm run dev:extension\" --names \"WEB,EXT\" --prefix-colors \"blue,yellow\"",
    "build": "next build",
    "build:extension": "node chrome-extension/build.js prod",
    "build:all": "npm run build && npm run build:extension",
    "start": "next start",
    "clean": "rm -rf .next chrome-extension/dist",
    "lint": "next lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "npx tsc --noEmit",
    "check:all": "npm run type-check && npm run biome && npm run test",
    "prepare": "husky",
    "extension:build": "node chrome-extension/build.js dev",
    "extension:build:prod": "node chrome-extension/build.js prod",
    "extension:package": "node chrome-extension/package.js",
    "biome": "biome check",
    "biome:write": "biome check --write",
    "biome:lint": "biome lint",
    "biome:format": "biome format --write"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "biome check --write",
    "**/*.{json,css}": "biome check --write"
  },
  "dependencies": {
    "@sentry/nextjs": "^9.33.0",
    "@supabase/supabase-js": "^2.49.8",
    "bcryptjs": "^3.0.2",
    "lightningcss": "^1.30.1",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/ioredis": "^5.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.6.0",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "ioredis": "^5.6.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.10",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
